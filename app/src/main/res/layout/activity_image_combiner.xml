<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageCombinerActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#222222"/>

    <ImageView
        android:id="@+id/image_background"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dwayne"/>

    <ImageView
        android:background="@drawable/image_background"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/img" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/gradient"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient"/>

    <RelativeLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/preview"
            android:background="@drawable/white_left_bottom_corner_filled"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginVertical="9dp"
                android:fontFamily="serif"
                android:text="Preview"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/close_preview"
            android:background="@drawable/white_left_bottom_corner_filled"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_white"
                android:padding="4dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back_rounded_white"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:id="@+id/timothy_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/timothy_logo_created_by"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:paddingTop="128dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/rotate_left"
                        android:padding="4dp"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_rotate_left"/>

                    <ImageView
                        android:id="@+id/rotate_right"
                        android:layout_alignParentEnd="true"
                        android:padding="4dp"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_rotate_right"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/rotate_left"
                        android:layout_toStartOf="@+id/rotate_right"
                        android:layout_marginHorizontal="8dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/move"
                            android:background="@drawable/white_rounded_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Move"
                                android:fontFamily="serif"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="24dp"
                                android:layout_marginVertical="9dp"/>

                            <RelativeLayout
                                android:visibility="visible"
                                android:id="@+id/move_clicked"
                                android:background="@drawable/white_rounded_background_filled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Move"
                                    android:fontFamily="serif"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginHorizontal="24dp"
                                    android:layout_marginVertical="9dp"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/zoom"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/white_rounded_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/zoom_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zoom"
                                android:fontFamily="serif"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="24dp"
                                android:layout_marginVertical="9dp"/>

                            <RelativeLayout
                                android:visibility="invisible"
                                android:id="@+id/zoom_clicked"
                                android:background="@drawable/white_rounded_background_filled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Zoom"
                                    android:fontFamily="serif"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginHorizontal="24dp"
                                    android:layout_marginVertical="9dp"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/degrees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="serif"
                            android:text="-32"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/white_rounded_background"
                    android:layout_marginHorizontal="16dp"
                    android:id="@+id/save_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/save_image_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save my image, Timothy."
                        android:fontFamily="serif"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_marginVertical="13dp"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:background="#A3000000"
        android:layout_height="match_parent">

        <ProgressBar
            android:indeterminateTint="#9C9C9C"
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:id="@+id/checked_icon"
            android:src="@drawable/ic_checked_icon"/>

    </RelativeLayout>

</RelativeLayout>